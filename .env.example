# ===========================================
# VOIDSTRIKE Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ===========================================
# SUPABASE (Required for multiplayer)
# ===========================================
# Get these from: https://supabase.com/dashboard/project/_/settings/api

# Public URL - safe to expose in browser
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anon/Public Key - safe to expose in browser
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role Key - NEVER expose in browser, server-side only
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ===========================================
# AUTHENTICATION (Optional - OAuth providers)
# ===========================================
# Configure in Supabase Dashboard > Authentication > Providers

# Google OAuth (optional)
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Discord OAuth (optional)
# DISCORD_CLIENT_ID=
# DISCORD_CLIENT_SECRET=

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ===========================================
# VERCEL KV (Optional - for session caching)
# ===========================================
# Get these from: https://vercel.com/dashboard/stores

# KV_URL=
# KV_REST_API_URL=
# KV_REST_API_TOKEN=
# KV_REST_API_READ_ONLY_TOKEN=

# ===========================================
# GAME CONFIGURATION
# ===========================================

# Game tick rate (updates per second)
NEXT_PUBLIC_TICK_RATE=20

# Maximum players per match
NEXT_PUBLIC_MAX_PLAYERS=2

# Enable debug mode (shows FPS, entity count, etc.)
NEXT_PUBLIC_DEBUG_MODE=false

# ===========================================
# ANALYTICS (Optional)
# ===========================================

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ===========================================
# DEPLOYMENT
# ===========================================

# Base URL (auto-set by Vercel, manual for other hosts)
# NEXT_PUBLIC_BASE_URL=https://voidstrike.vercel.app

# Node environment
NODE_ENV=development
