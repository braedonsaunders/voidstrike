  "_documentation": {
    "animations": {
      "description": "Animation mappings let you define which animation clips in your GLB files correspond to game actions",
      "format": "\"gameAction\": [\"clipName1\", \"clipName2\", ...]",
      "example": "If your walk animation is named 'my_walk_cycle', add it: \"walk\": [\"my_walk_cycle\", \"walk\", \"run\"]",
      "priority": "First matching clip name wins, so put your preferred animation first in the array"
    },
    "animationSpeed": {
      "description": "Optional multiplier for animation playback speed (default: 1.0)",
      "example": "Use 0.5 for half speed, 2.0 for double speed"
    },
    "scale": {
      "description": "Target size in game units. Models are normalized so their bounding box height equals this value.",
      "example": "scale: 1.2 makes the model 1.2 game units tall. scale: 15 makes it 15 units tall (for big ships).",
      "default": "1.0"
    },
    "airborneHeight": {
      "description": "For flying units only. Height in game units above the terrain surface. This controls how HIGH the unit flies, independent of its visual size.",
      "default": "8 (standard flight altitude)",
      "example": "A specter with airborneHeight: 7 flies at 7 units above terrain. A dreadnought with airborneHeight: 15 flies higher."
    },
    "rotation": {
      "description": "Rotation offset in degrees on all 3 axes: { x, y, z }. Use to fix models facing wrong direction or tilted.",
      "example": "If unit walks backward: { \"x\": 0, \"y\": 180, \"z\": 0 }. Tilt forward: { \"x\": 15, \"y\": 0, \"z\": 0 }",
      "default": "{ \"x\": 0, \"y\": 0, \"z\": 0 } (no rotation beyond engine default)"
    },
    "lod": {
      "description": "LOD levels are automatically detected. LOD0 is highest detail (default), LOD1 is medium, LOD2 is lowest.",
      "convention": "Models named modelname_LOD0.glb, modelname_LOD1.glb, modelname_LOD2.glb"
    }
  }
